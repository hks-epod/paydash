{
    

    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "construx",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        
                        
                        "css": {
                            "module": "construx-less",
                            "files": "/css/**/*.css"
                        },
                        
                        "copier": {
                            "module": "construx-copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    }
}
